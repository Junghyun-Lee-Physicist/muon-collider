// Hit.cc
#include "Hit.hh"
#include "G4Allocator.hh"

G4ThreadLocal G4Allocator<Hit>* HitAllocator = nullptr;

Hit::Hit() : G4VHit(), fTrackID(-1), fCellID(-1), fDepositedEnergy(0.0) {}

Hit::~Hit() {}

Hit::Hit(const Hit& right) : G4VHit() {
    fTrackID = right.fTrackID;
    fCellID = right.fCellID;
    fDepositedEnergy = right.fDepositedEnergy;
}

const Hit& Hit::operator=(const Hit& right) {
    fTrackID = right.fTrackID;
    fCellID = right.fCellID;
    fDepositedEnergy = right.fDepositedEnergy;
    return *this;
}

G4int Hit::operator==(const Hit& right) const {
    return (this == &right) ? 1 : 0;
}

